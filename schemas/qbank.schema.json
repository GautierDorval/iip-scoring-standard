{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://raw.githubusercontent.com/GautierDorval/iip-scoring-standard/v0.1.2/schemas/qbank.schema.json",
  "title": "QBank (Restricted Interface Schema)",
  "type": "object",
  "$comment": "Restricted public specification. Interface schema only. No operational recipes, quotas, or sector calibrations are published here.",
  "additionalProperties": false,
  "required": [
    "qbank_id",
    "qbank_version",
    "language",
    "questions"
  ],
  "properties": {
    "qbank_id": {
      "type": "string"
    },
    "qbank_version": {
      "type": "string"
    },
    "protocol_version_compat": {
      "type": "string"
    },
    "language": {
      "type": "string",
      "description": "Primary language tag (BCP-47)"
    },
    "notes": {
      "type": "string"
    },
    "questions": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/QBankItem"
      },
      "minItems": 1
    }
  },
  "$defs": {
    "QBankItem": {
      "type": "object",
      "$comment": "A single question record. This schema describes structure only. It does not define operational selection, distribution, or scoring rules.",
      "additionalProperties": false,
      "required": [
        "qid",
        "question",
        "language",
        "segment",
        "question_type"
      ],
      "properties": {
        "qid": {
          "type": "string"
        },
        "question": {
          "type": "string"
        },
        "language": {
          "type": "string",
          "description": "Language tag for this question (BCP-47)."
        },
        "segment": {
          "type": "string"
        },
        "s_crit": {
          "type": "boolean",
          "description": "Marks the question as belonging to a critical segment (conceptual marker only)."
        },
        "question_type": {
          "type": "string",
          "enum": [
            "F",
            "I",
            "M"
          ],
          "description": "Question type: F (factual), I (interpretive), M (meta/boundary)."
        },
        "sensitivity_class": {
          "type": "string",
          "enum": [
            "low",
            "medium",
            "high",
            "critical"
          ]
        },
        "variants": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "evidence_targets": {
          "type": "array",
          "items": {
            "type": "string",
            "format": "uri"
          }
        },
        "status": {
          "type": "string",
          "enum": [
            "active",
            "deprecated",
            "draft"
          ]
        },
        "introduced_in": {
          "type": "string"
        },
        "notes": {
          "type": "string"
        }
      }
    }
  }
}
