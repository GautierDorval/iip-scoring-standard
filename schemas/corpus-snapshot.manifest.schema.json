{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://raw.githubusercontent.com/GautierDorval/iip-scoring-standard/main/schemas/corpus-snapshot.manifest.schema.json",
  "title": "Corpus Snapshot Manifest (Restricted Interface Schema)",
  "type": "object",
  "$comment": "Restricted public specification. Interface schema only. This does not define crawling procedures, storage SOPs, or operational collection recipes.",
  "additionalProperties": false,
  "required": [
    "snapshot_id",
    "created_at",
    "sources"
  ],
  "properties": {
    "snapshot_id": {
      "type": "string"
    },
    "snapshot_version": {
      "type": "string"
    },
    "created_at": {
      "type": "string",
      "format": "date-time"
    },
    "notes": {
      "type": "string"
    },
    "sources": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "#/$defs/SnapshotSource"
      }
    },
    "integrity": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "manifest_sha256": {
          "type": "string",
          "pattern": "^[a-f0-9]{64}$"
        },
        "served_bytes_sha256": {
          "type": "string",
          "pattern": "^[a-f0-9]{64}$"
        }
      }
    }
  },
  "$defs": {
    "SnapshotSource": {
      "type": "object",
      "$comment": "A single snapshot source reference. Structure only; evidence policies are defined elsewhere.",
      "additionalProperties": false,
      "required": [
        "source_id",
        "source_type",
        "uri"
      ],
      "properties": {
        "source_id": {
          "type": "string"
        },
        "source_type": {
          "type": "string",
          "enum": [
            "url",
            "file",
            "artifact",
            "note"
          ]
        },
        "uri": {
          "type": "string",
          "format": "uri"
        },
        "retrieved_at": {
          "type": "string",
          "format": "date-time"
        },
        "sha256": {
          "type": "string",
          "pattern": "^[a-f0-9]{64}$"
        },
        "content_type": {
          "type": "string"
        },
        "canonical": {
          "type": "boolean"
        }
      }
    }
  }
}
